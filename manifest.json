{
  "manifest_version": 2,

  "name": "Cookie Blocker",
  "description": "This extension blocks sending any cookiee stored on your Chrome",
  "version": "1.0",
  "icons": {
      "48": "icons/icon__cookie_48.png",
      "128": "icons/icon__cookie_128.png"
  },
  "permissions": [
      "webRequest",
      "webRequestBlocking",
      "http://*/",
      "https://*/"
  ],
  "background": {
      "scripts" : ["js/background.js"]
  },
  "browser_action": {
	  "default_title": "Cookie Blocker",
      "default_icon": "icons/icon__cookie.png"
  }
}
